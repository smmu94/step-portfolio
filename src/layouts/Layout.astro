---
import "../styles/global.css";
import Navbar from "../components/layout/Navbar.astro";
import Footer from "../components/layout/Footer.astro";
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Space+Mono:wght@400;700&family=JetBrains+Mono:wght@400;500;600&family=Inter:wght@400;500;600&display=swap"
    />
    <meta name="generator" content={Astro.generator} />
    <title>Stephanie Morales</title>
  </head>
  <body class="min-h-screen w-full m-0 text-text-primary bg-bg-dark overflow-x-hidden relative">
    <div class="fixed inset-0 pointer-events-none overflow-hidden">
      <div class="absolute top-0 right-0 w-96 h-96 bg-neon-cyan opacity-5 blur-[120px] rounded-full"></div>
      <div class="absolute top-1/3 left-0 w-80 h-80 bg-neon-cyan opacity-3 blur-[100px] rounded-full"></div>
      <div class="absolute bottom-20 right-1/4 w-72 h-72 bg-neon-cyan opacity-4 blur-[110px] rounded-full"></div>
    </div>
    <Navbar />
    <slot name="hero" />
    <main class="relative z-10 flex flex-col items-center gap-32 px-6 md:px-10 py-20">
      <slot />
    </main>
    <slot name="modals" />
    <Footer />
  </body>
</html>
