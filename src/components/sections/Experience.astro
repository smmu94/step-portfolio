---
import { experiences, topSkills } from '../../utils/constants';
const exp = experiences[0];
---

<section id="experience" class="w-full py-20 relative border-neon-cyan/20">
    <div class="max-w-6xl mx-auto px-6 md:px-10 mb-12 text-center">
        <h2 class="text-subtitle text-neon-cyan mb-4">Experience & Skills</h2>
        <p class="text-body text-primary max-w-2xl mx-auto">
            A summary of my professional experience and the technologies I excel
            at.
        </p>
    </div>
    <div
        class="max-w-4xl mx-auto bg-bg-burgundy/20 backdrop-blur-md rounded-xl p-6 md:p-10 shadow-lg hover:scale-105 transition-transform duration-300"
    >
        <h3 class="text-subtitle text-neon-cyan mb-2">{exp.role}</h3>
        <p class="text-body text-primary font-medium mb-1">{exp.company}</p>
        <p class="text-body text-text-muted mb-4">{exp.date}</p>
        <p class="text-body text-primary mb-6">{exp.description}</p>
    </div>
    <div class="max-w-6xl mx-auto px-6 md:px-10 mt-16 text-center">
        <h3 class="text-subtitle text-neon-cyan mb-4">Top Skills</h3>
        <div class="flex flex-wrap justify-center gap-3">
            {
                topSkills.map((skill) => (
                    <span class="px-3 py-1 rounded bg-bg-burgundy/20 text-primary text-xs md:text-sm">
                        {skill}
                    </span>
                ))
            }
        </div>
    </div>
</section>
